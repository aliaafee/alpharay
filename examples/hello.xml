<?xml version="1.0" ?>
<project>
    <!-- This is a minimal scene -->
	<scene>

		<images>
			<checker2d name="checker"
				color1="0.7,0.7,0.7"
				color2="1.0,1.0,1.0" />
		</images>

		<maps>
			<map2dplane name="map1"
				image="checker" />
		</maps>

		<materials>
            <material name="material1" 
				diffusecolor="1,0,0" 
				reflection="specular"
				reflectivity="0.1" />
			<material name="material2"
				diffusemap="map1"
				reflection="specular"
				reflectivity="0.5" />
        </materials>

        <lights>
            <pointlight name="light" 
                position="2,2,2" 
				intensity="5,5,5"  />
			<pointlight name="light2" 
                position="-3,-1,6" 
                intensity="5,5,5"  /> 
        </lights>

        <objects>
            <sphere name="object1" 
                position="0,5,0" 
                material="material1" /> 

            <plane name="object2" 
				position="0,0,-1"
				material="material2" /> 

        </objects>

    </scene>
</project>
